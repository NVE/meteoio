<!--
This is an INIshell configuration file for the software MeteoIO.
https://meteoio.slf.ch
-->

<inishell_config application="DAMEi" icon="DAMEi.png" version="1.0">
	<include file="meteoio_parametergroups.xml"/>
	
	<!-- Short descriptions of the software packages -->
	<frame caption="DAMEi" color="sl_blue">
		<section name="Input"/>
		<parameter type="helptext" wrap="true">
			<help>&lt;i&gt;DAMEi&lt;/i&gt; or Data Access Made Easy is a project that aims at re-thinking the way scientific meteorological timeseries are handled. By clearly defining roles and responsibilities and developing technical tools to fulfill these roles, we want to improve data quality and reuse.</help>
		</parameter>
		<parameter type="helptext" wrap="true">
			<help>The version shown for DAMEi refers to the INIshell configuration for DAMEi v... and not the Software itself. The Software has the version which you installed.</help>
		</parameter>
	</frame>


	<!-- INPUT & OUTPUT -->
	<include file="meteoio_timeseries_input.xml"/>
	<include file="meteoio_timeseries_output.xml"/>

	<frame caption="Coordinate system and time zone">
		<section name="Input"/>
		<parameter key="COORDSYS" type="alternative" optional="false">
			<reference name="COORDSYSTEMS"/>
			<help>Choose the coordinate system of your data's location format.</help>
		</parameter>
		<!-- when giving a precision the default value should match (no 'unsaved changes' warning): -->
		<parameter key="TIME_ZONE" type="number" format="decimal" sign="true" default="1.00" min="-12" max="14" wrap="true" notoggle="true" optional="false">
			<help>The time zone your data is reported with</help>
		</parameter>
		<parameter key="METEO" label="Select METEO data plugin:" type="alternative" optional="false" default="CSV">
			<section name="Input"/>
			<option value="CSV" bold="true">
				<reference name="CSV_IN"/>
				<help>Comma separated files [&lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/csvio.html&quot;&gt;more…&lt;/a&gt;]</help>
			</option>
			<option value="IMIS" italic="true">
				<reference name="IMIS_IN" />
				<help>SLF's IMIS database [&lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/imis.html&quot;&gt;more…&lt;/a&gt;]</help>
			</option>
			<help>See &lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/data_sources.html&quot;&gt;MeteoIO's help&lt;/a&gt; for more information</help>
		</parameter> <!-- end METEOIO_TS_IN -->
	</frame>

	<include file="meteoio_input_data_editing.xml"/>

	<frame caption="Coordinate system and time zone">
		<section name="Output"/>
		<parameter key="COORDSYS" type="alternative" optional="false">
			<reference name="COORDSYSTEMS"/>
			<help>Choose the coordinate system of your data's location format.</help>
		</parameter>
		<!-- when giving a precision the default value should match (no 'unsaved changes' warning): -->
		<parameter key="TIME_ZONE" type="number" format="decimal" sign="true" default="1.00" min="-12" max="14" wrap="true" notoggle="true" optional="false">
			<help>The time zone your data is reported with</help>
		</parameter>
		<parameter key="SAMPLING_RATE_MIN" type="number" format="decimal" unit="min" default="60" min="0.01" max="1440.00" optional="true">
			<help>The sampling rate that you want for the output data, in minutes</help>
		</parameter>
		<parameter key="METEO" label="Select METEO data plugin:" type="alternative" optional="false" default="SMET">
			<section name="Output"/>
			<option value="NETCDF" bold="true" italic="true">
				<reference name="NETCDF_OUT"/>
				<help>NetCDF grids and timeseries [&lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/netcdf.html&quot;&gt;more…&lt;/a&gt;]</help>
			</option>
			<option value="SMET" bold="true">
				<reference name="SMET_OUT"/>
				<help>SMET data files [&lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/smetio.html&quot;&gt;more…&lt;/a&gt;]</help>
			</option>
			<help>See &lt;a href=&quot;https://meteoio.slf.ch/doc-release/html/data_sources.html&quot;&gt;MeteoIO's help&lt;/a&gt; for more information</help>
		</parameter>
	</frame>

</inishell_config>
